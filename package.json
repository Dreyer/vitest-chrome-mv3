{
  "name": "vitest-chrome-mv3",
  "version": "1.0.0",
  "description": "Test Chrome extensions with Vitest. A complete mock of the Chrome API with support for Manifest V3.",
  "type": "module",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "exports": {
    ".": {
      "import": "./lib/index.esm.js",
      "require": "./lib/index.cjs.js"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "test": "vitest run",
    "build:docs": "node scripts/download-api-docs.js",
    "build:schema": "node scripts/generate-schema.js",
    "build:mock": "node scripts/generate-mock.js",
    "build": "rollup -c --forceExit",
    "prepublishOnly": "npm run build:mock && npm run format && npm run lint && npm run format:check && npm run build && npm test",
    "preversion": "npm run lint && npm run format:check && npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "vitest",
    "chrome",
    "chrome-extension",
    "testing",
    "mock",
    "mv3",
    "manifest-v3",
    "chrome-api",
    "test",
    "unit-test"
  ],
  "author": "Matthew Dreyer <matthew@smplcty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dreyer/vitest-chrome-mv3.git"
  },
  "bugs": {
    "url": "https://github.com/Dreyer/vitest-chrome-mv3/issues"
  },
  "homepage": "https://github.com/Dreyer/vitest-chrome-mv3#readme",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.1.29",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "rollup": "^4.53.2",
    "tslib": "^2.8.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.46.4",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  },
  "peerDependencies": {
    "vitest": ">=4.0.0"
  }
}
