{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests/**/*.ts", "node_modules", "lib"]
}
